    xmlns:local="using:ClippyAI"
    Name="ClippyAI"
    x:Class="ClippyAI.App"
    x:DataType="vm:ApplicationViewModel"
    RequestedThemeVariant="Default">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>