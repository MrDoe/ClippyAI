{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "msbuild",
            "command": "dotnet",
            "type": "process",
            "args": [
                "msbuild",
                "${workspaceFolder}/ClippyAI.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ClippyAI.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ClippyAI.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign",
                "/p:Configuration=Debug"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ClippyAI.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign",
                "/p:Configuration=Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-windows",
            "dependsOn": ["build-release"],
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ClippyAI/ClippyAI.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign",
                "/p:TargetFramework=net9.0-windows10.0.17763.0"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-linux-deb",
            "dependsOn": "",
            "command": "dotnet-deb",
            "type": "process",
            "args": [
                "-c",
                "Release"
            ],
            "options":{
                "cwd": "${workspaceFolder}/ClippyAI"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-linux-rpm",
            "dependsOn": "",
            "command": "dotnet-rpm",
            "type": "process",
            "args": [
                "-c",
                "Release"
            ],
            "options":{
                "cwd": "${workspaceFolder}/ClippyAI"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-linux-tar",
            "dependsOn": "",
            "command": "dotnet-tarball",
            "type": "process",
            "args": [
                "-c",
                "Release"
            ],
            "options":{
                "cwd": "${workspaceFolder}/ClippyAI"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-linux",
            "dependsOn": ["publish-linux-deb", "publish-linux-rpm", "publish-linux-tar"],
            "dependsOrder": "sequence",
            "command": "",
            "type": "shell",
            "args": [
                "echo",
                "Done"
            ],
            "problemMatcher": []
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/ClippyAI/ClippyAI.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/ClippyAI/ClippyAI.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}